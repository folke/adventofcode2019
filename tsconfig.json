{
    "compilerOptions": {
        "declaration": true,
        "importHelpers": true,
        "module": "commonjs",
        "outDir": "build",
        // "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "target": "ES2019",
        "plugins": [
            {
                "name": "typescript-tslint-plugin",
                "alwaysShowRuleFailuresAsWarnings": true,
                "ignoreDefinitionFiles": true,
                "suppressWhileTypeErrorsPresent": false
            }
        ]
    },
    "include": ["src/**/*", "src /**/*.txt", "__tests__/**/*"]
}
